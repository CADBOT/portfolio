        <ul class='right'>
          <li class='divider'></li>
          <li><%= link_to 'Posts', posts_path %></li>
          <li class='divider'></li>
          <li><%= link_to 'GitHub', 'https://github.com/CADBOT/' %></li>
          <li class='divider'></li>
          <li><%= link_to 'LinkedIn', 'http://www.linkedin.com/pub/charles-crawford-iii/56/61/8b8/' %></li>
        </ul>
